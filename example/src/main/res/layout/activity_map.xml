<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
  >
  <data>

    <variable
      name="viewModel"
      type="agency.tango.viking.example.MapViewModel"
      />
  </data>

  <FrameLayout
    android:id="@+id/activity_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="agency.tango.viking.example.MapActivity"
    >
    <agency.tango.viking.bindings.map.GoogleMapView
      android:id="@+id/map"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      bind:heatMap="@{viewModel.heatMap}"
      bind:infoWindowAdapter="@{viewModel.infoWindowAdapter}"
      bind:infoWindowClick="@{viewModel.infoWindowClick}"
      bind:location="@={viewModel.location}"
      bind:mapItems="@{viewModel.models}"
      bind:markerClick="@{viewModel.markerClick}"
      bind:overlays="@{viewModel.overlays}"
      bind:paths="@{viewModel.paths}"
      bind:zoom="@={viewModel.zoom}"
      />

  </FrameLayout>
</layout>